@using CompanyPanelUI.DTOS


@model AddDemandModel
@{
    ViewData["Title"] = "AddDemand";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<br/>
<div class="container">
    <div class="card-header">
                <h3 class="card-title">Talep Oluştur</h3>
            </div>
    <form asp-action="AddDemand" method="post" enctype="multipart/form-data" asp-controller="User">
        <div class="card-body">
            <div class="form-group">
                <label for="exampleInputEmail1">Talep Başlığı</label>
                <input type="text" class="form-control" asp-for="DemandTitle" name="DemandTitle" id="DemandTitle" name="DemandTitle" placeholder="Talep Başlığı">
                @Html.ValidationMessageFor(x => x.DemandTitle)
            </div>
            <div class="form-group">
                <label for="exampleInputEmail1">Hizmet Seç</label>
                <select name="ServiceId" asp-for="ServiceId">
                    @Html.ValidationMessageFor(x => x.ServiceId)
                    @foreach (var item in Model.Service)
                    {
                        <option value="@item.ServiceId">@item.ServiceName</option>

                    }
                </select>
                <input type="submit"/>
            </div>
            

            <textarea class="form-control" asp-for="DemandContent" name="DemandContent" id="editorid"></textarea>
            @Html.ValidationMessageFor(x => x.DemandContent)

            <div class="form-group">
                <label for="files">Dosya yükleyiniz:</label>
                <input type="file" name="DemandFile" id="DemandFile" asp-for="DemandFile" multiple/>
                @Html.ValidationMessageFor(x => x.DemandFile)
            </div>
        </div>
        <!-- /.card-body -->

        <div class="card-footer">
            <button type="submit" class="btn btn-primary">Talep Oluştur</button>
        </div>
    </form>

</div>



    
<script src="~/plugins/bs-custom-file-input/bs-custom-file-input.min.js" />

@section Scripts
{
    <script src="~/ckeditor/ckeditor.js"></script>
    <script>
    CKEDITOR.replace("editorid");
    </script>
}
    

   
   
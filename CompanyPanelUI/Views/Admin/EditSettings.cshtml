@model EntityLayer.Concrete.Setting

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<div class="card card-primary">
  <div class="card-header">
    <h3 class="card-title">Ayar Düzenle</h3>
  </div>
  <!-- /.card-header -->
  <!-- form start --> 
  <form asp-action="EditSettings" method="post" asp-controller="Admin">
    <div class="card-body">
      <div class="form-group">
        <label for="exampleInputEmail1">Ayar Adı</label>
       <input type="hidden" asp-for="Id" class="form-control" id="Id"  name="Id" value="@Model.Id">
        <input type="text" asp-for="SettingName" class="form-control" id="SettingName"  name="SettingName" placeholder="@Model.SettingName" readonly="">
        
      </div>
      <div class="form-group">
        
        @if (Model.SettingName == "DeleteLogsDayParamater")
        {
          <label for="exampleInputEmail1">Ayar Değeri (Logların kaç günde bir temizleneceğini seçiniz)</label>
        }
        <input type="number" asp-for="SettingValue" class="form-control" id="SettingValue"  name="SettingValue" placeholder="@Model.SettingValue">
        
      </div>
    </div>
    <!-- /.card-body -->

    <div class="card-footer">
      <button type="submit" class="btn btn-primary">Ayar Güncelle</button>
    </div>
  </form>
</div>


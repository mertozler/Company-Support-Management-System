@model CompanyPanelUI.DTOS.ServicesDTO

@{
    ViewData["Title"] = "CreateService";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card card-primary">
  <div class="card-header">
    <h3 class="card-title">Hizmet Kaydı</h3>
  </div>
  <!-- /.card-header -->
  <!-- form start --> 
  <form asp-action="CreateService" method="post" asp-controller="Admin">
    <div class="card-body">
      <div class="form-group">
        <label for="exampleInputEmail1">Hizmet Adı</label>
        <input type="text" asp-for="ServiceName" class="form-control" id="ServiceName"  name="ServiceName" placeholder="Servis Adı">
        @Html.ValidationMessageFor(x=>x.ServiceName)
      </div>
      <div class="form-group">
        <label for="exampleInputEmail1">Hizmet Açıklaması</label>
        <input type="text" asp-for="ServiceAbout" class="form-control" id="ServiceAbout"  name="ServiceAbout" placeholder="Servis Açıklaması">
        @Html.ValidationMessageFor(x=>x.ServiceAbout)
      </div>
    </div>
    <!-- /.card-body -->

    <div class="card-footer">
      <button type="submit" class="btn btn-primary">Hizmet Ekle</button>
    </div>
  </form>
</div>


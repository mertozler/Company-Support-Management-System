@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h4>Create a new account.</h4>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <label asp-for="Input.Role"></label>
            <select asp-for="Input.Role" class="form-control">
                <option selected value="musteri">Müşteri</option>
                <option value="admin">Admin</option>
            </select>
            <span asp-validation-for="Input.Role" class="text-danger"></span>

            <div class="form-group">
                <label asp-for="Input.NameSurname"></label>
                <input asp-for="Input.NameSurname" class="form-control" />
                <span asp-validation-for="Input.NameSurname" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Input.ApplicationFirm"></label>
                <input asp-for="Input.ApplicationFirm" class="form-control" />
                <span asp-validation-for="Input.ApplicationFirm" class="text-danger"></span>
            </div>


            <div class="form-group">
                <label asp-for="Input.Email"></label>
                <input asp-for="Input.Email" class="form-control" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Password"></label>
                <input asp-for="Input.Password" class="form-control" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.ConfirmPassword"></label>
                <input asp-for="Input.ConfirmPassword" class="form-control" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Kayıt Ol</button>
        </form>
    </div>
    
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

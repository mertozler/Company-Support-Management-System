@using EntityLayer.Concrete
@using Microsoft.AspNetCore.Identity
@model CompanyPanelUI.Models.DemandListViewModel.DemandListViewModel
@inject UserManager<CustomUser> UserManager

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<div class="card card-primary">
    <div class="card-header">
        <h3 class="card-title">Talepleri Filtrele</h3>
    </div>

    <div class="card">
        <div class="card-body">

            <div class="container">
                <form asp-action="DemandList" method="post" asp-controller="Employee">
                    <div class="row">
                        <div class="col-sm">
                            <h3>Tarih Aralığı Seçin</h3>
                            <label for="StartDate">Başlangıç Tarihi:</label>
                            <input type="date" asp-for="StartDate" class="form-control" id="StartDate"  name="StartDate" placeholder="@Model.StartDate">
                            <label for="EndDate">Bitiş Tarihi:</label>
                            <input type="date" asp-for="EndDate" class="form-control" id="EndDate"  name="EndDate" placeholder="@Model.EndDate">
                        </div>
                        <div class="col-sm">
                                                    <h3>Talep Durumu Seçin</h3>
                                                    <div class="form-check">
                                                        <input class="form-check-input" asp-for="CevaplanmamisTalep"  name="CevaplanmamisTalep" type="checkbox" id="CevaplanmamisTalep">
                                                        <label class="form-check-label" for="flexCheckDefault">
                                                            Aktif Talepler
                                                        </label>
                                                    </div>
                                                    <div class="form-check">
                                                                                  <input class="form-check-input" asp-for="Yanitlanmistalep" type="checkbox"  id="Yanitlanmistalep"  name="Yanitlanmistalep" >
                                                                                  <label class="form-check-label" for="flexCheckDefault">
                                                                                    Kapatılan Talepler
                                                                                  </label>
                                                                                </div>
                                                        
                                                    
                                                    
                                                </div>
                        <div class="col-sm">
                            <h3>Hizmet Seçin</h3>
                            <select name="ServiceId" asp-for="ServiceId">
                                @foreach (var item in Model.Services)
                                {
                                    <option value="@item.ServiceId">@item.ServiceName</option>

                                }
                            </select>
                        </div>
                    </div>
                    <div class="col-sm">
                        <button type="submit" class="btn btn-success">Filtrele</button>
                        <a class="btn btn-info" href="/Employee/DemandList">Sıfırla</a>
                    </div>
                </form>
            </div>



                     
        </div>
    </div>
              


    <div class="card-header">
        <h3 class="card-title">Talepler Yönetimi</h3>
    </div>
    <br/>
              
    <ul class="nav nav-pills mb-3" id="pills-tab" role="tablist">
      <li class="nav-item" role="presentation">
        <button class="nav-link" id="pills-profile-tab" data-bs-toggle="pill" data-bs-target="#pills-profile" type="button" role="tab" aria-controls="pills-profile" aria-selected="false">Bana Atanan Talepler</button>
      </li>
        <li class="nav-item" role="presentation">
            <button class="nav-link" id="pills-contact-tab" data-bs-toggle="pill" data-bs-target="#pills-contact" type="button" role="tab" aria-controls="pills-contact" aria-selected="false">İlgilendiğim Bölümlere Gelen Talepler</button>
        </li>
        <li class="nav-item" role="presentation">
                <button class="nav-link" id="pills-contact-tab" data-bs-toggle="pill" data-bs-target="#pills-contact-service" type="button" role="tab" aria-controls="pills-contact" aria-selected="false">İlgilendiğim Servislere Gelen Talepler</button>
        </li>
    </ul> 
    <div class="tab-content" id="pills-tabContent">
        <div class="tab-pane fade show active" id="pills-profile" role="tabpanel" aria-labelledby="pills-profile-tab">
             <div class="card">
                                                                                                                                           
                                                                                                                     
                            <div class="card-body">
                                <table class="table table-bordered">
                                    <thead>
                                    <tr>
                                        <th style="width: 10px">#</th>
                                        <th>Talep Gönderen Kullanıcı Adı</th>
                                        <th>Talep Başlığı</th>
                                        <th>Talep İçeriği</th>
                                        <th>Talep Gönderilme Tarihi</th>
                                        <th>Talep Durumu</th>
                                        <th style="width: 40px">Talep Seçimi</th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    @foreach(var item in Model.DemandAssignedForUser)
                                    {
                                        <tr>
                                                                                                                                               
                                            <td>@item.DemandId</td>
                                             @{
                                                                        var currentUserName =  UserManager.FindByIdAsync(item.UserId).Result.NameSurname;
                                                                    }
                                                                    <td>@currentUserName</td>
                                            @if(item.DemandTitle.Length >=30)
                                            {
                                                <td>@item.DemandTitle.Substring(0,30) ..</td>
                                            }
                                            else
                                            {
                                                <td>@item.DemandTitle</td>
                                            }
                                                                                                                    
                                                                                                                                           
                                            <td> @Html.Raw(item.DemandContent.Substring(0,20)) ...</td>
                                            <td>
                                                @(((DateTime)item.DemandCreateTime).ToString("dd.MM.yyyy"))
                                                                                                                                           
                                            </td>
                                            @if (item.DemandStatus == true)
                                            {
                                                <td class="bg-success">
                                                    Aktif
                                                </td>
                                                                                                                                                    
                                            }else{
                                                <td class="bg-danger">
                                                    Pasif
                                                </td>
                                            }
                                                                                                                    
                                            <td>
                                                <a href="/Employee/DemandAnswerUser/@item.DemandId"><span class="badge bg-danger">Talep Yanıtla</span></a>
                                                                                                                                                  
                                            </td>
                                                                                                                                           
                                        </tr>
                                    }
                                    </tbody>
                                </table>
                            </div>
                                                                                                                    
                                                                                                                    
                        
                            </div>
                        
        </div>
        <div class="tab-pane fade" id="pills-contact" role="tabpanel" aria-labelledby="pills-contact-tab">  
           
            <div class="card">
                                                                                                                                          
                                                                                                                    
                           <div class="card-body">
                               <table class="table table-bordered">
                                   <thead>
                                   <tr>
                                       <th style="width: 10px">#</th>

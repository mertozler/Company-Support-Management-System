@model EntityLayer.Concrete.Department

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<div class="card card-primary">
  <div class="card-header">
    <h3 class="card-title">Bölüm Düzenle</h3>
  </div>
  <!-- /.card-header -->
  <!-- form start --> 
  <form asp-action="EditDepartment" method="post" asp-controller="Admin">
    <div class="card-body">
      <div class="form-group">
        <label for="exampleInputEmail1">Bölüm Adı</label>
       <input type="hidden" asp-for="DepartmentId" class="form-control" id="DepartmentId"  name="DepartmentId" value="@Model.DepartmentId">
        <input type="text" asp-for="DepartmentName" class="form-control" id="DepartmentName"  name="DepartmentName" placeholder="@Model.DepartmentName">
        
      </div>
      <div class="form-group">
        <label for="exampleInputEmail1">Bölüm Açıklaması</label>
        <input type="text" asp-for="DepartmentAbout" class="form-control" id="DepartmentAbout"  name="DepartmentAbout" placeholder="@Model.DepartmentAbout">
        
      </div>
    </div>
    <!-- /.card-body -->

    <div class="card-footer">
      <button type="submit" class="btn btn-primary">Departman Güncelle</button>
    </div>
  </form>
</div>

@model CompanyPanelUI.Models.ResetPasswordViewModel.ResetPasswordViewModel

@{
    ViewBag.Title = "title";
    Layout = null;
}

<html lang="en"><head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>AdminLTE 3 | Registration Page</title>

  <!-- Google Font: Source Sans Pro -->
  <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&amp;display=fallback">
  <!-- Font Awesome -->
  <link rel="stylesheet" href="~/plugins/fontawesome-free/css/all.min.css">
  <!-- icheck bootstrap -->
  <link rel="stylesheet" href="~/plugins/icheck-bootstrap/icheck-bootstrap.min.css">
  <!-- Theme style -->
  <link rel="stylesheet" href="~/dist/css/adminlte.min.css">
</head>
<body class="register-page" style="min-height: 570.781px;">
<div class="register-box">
  <div class="register-logo">
    <a href="#"><b>Company</b>Panel</a>
  </div>

  <div class="card">
    <div class="card-body register-card-body">
      <p class="login-box-msg">Şifre Sıfırla</p>

      <form asp-action="ResetPassword" method="post" asp-controller="Login">
        <input type="hidden" asp-for="Token" />
        <div class="input-group mb-3">
          <input type="text" asp-for="Email" class="form-control" id="Email" name="Email" placeholder="Email giriniz">
          <div class="input-group-append">
            <div class="input-group-text">
              <span class="fas fa-user"></span>
            </div>
          </div>
        </div>
        <div class="input-group mb-3">
          <input type="password" asp-for="Password" class="form-control" id="Password" name="Password" placeholder="Şifre giriniz">
          <div class="input-group-append">
            <div class="input-group-text">
              <span class="fas fa-user"></span>
            </div>
          </div>
        </div>
        <div class="input-group mb-3">
          <input type="password" asp-for="ConfirmPassword" class="form-control" id="ConfirmPassword" name="ConfirmPassword" placeholder="Şifreyi yeniden giriniz">
          <div class="input-group-append">
            <div class="input-group-text">
              <span class="fas fa-user"></span>
            </div>
          </div>
        </div>
        @if (ViewBag.Message != null)
        {
          <p>@ViewBag.Message</p>
        }
        
        <button type="submit"  class="btn btn-primary btn-block">Şifre Sıfırla</button>
      </form>
      
      <a href="/Login/Index" class="text-center">Üyeliğim var, giriş yap.</a>
      <a href="/Login/Register" class="text-center">Kayıt ol.</a>
      
      

      
    </div>
    <!-- /.form-box -->
  </div><!-- /.card -->
</div>
<!-- /.register-box -->

<!-- jQuery -->
<script src="../../plugins/jquery/jquery.min.js"></script>
<!-- Bootstrap 4 -->
<script src="../../plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
<!-- AdminLTE App -->
<script src="../../dist/js/adminlte.min.js"></script>


</body></html>


                                           <td> @Html.Raw(item.DemandContent.Substring(0,20)) ...</td>
                                           <td>
                                               @(((DateTime)item.DemandCreateTime).ToString("dd.MM.yyyy"))
                                                                                                                                          
                                           </td>
                                           @if (item.DemandStatus == true)
                                           {
                                               <td class="bg-success">
                                                   Aktif
                                               </td>
                                                                                                                                                   
                                           }else{
                                               <td class="bg-danger">
                                                   Pasif
                                               </td>
                                           }
                                                                                                                   
                                           <td>
                                               <a href="/Employee/DemandAnswerUser/@item.DemandId"><span class="badge bg-danger">Talep Yanıtla</span></a>
                                                                                                                                                 
                                           </td>
                                                                                                                                          
                                       </tr>
                                   }
                                   </tbody>
                               </table>
                           </div>
                                                                                                                   
                                                                                                                   
                       
                           </div>
                       </div>
        <div class="tab-pane fade" id="pills-contact-service" role="tabpanel" aria-labelledby="pills-contact-tab">  
                                  
                                   <div class="card">
                                                                                                                                                                 
                                                                                                                                           
                                                  <div class="card-body">
                                                      <table class="table table-bordered">
                                                          <thead>
                                                          <tr>
                                                              <th style="width: 10px">#</th>
                                                              <th>Talep Gönderen Kullanıcı Adı</th>
                                                              <th>Talep Başlığı</th>
                                                              <th>Talep İçeriği</th>
                                                              <th>Talep Gönderilme Tarihi</th>
                                                              <th>Talep Durumu</th>
                                                              <th style="width: 40px">Talep Seçimi</th>
                                                          </tr>
                                                          </thead>
                                                          <tbody>
                                                          @foreach(var item in Model.DemandServicesForUser)
                                                          {
                                                              <tr>
                                                                                                                                                                     
                                                                  <td>@item.DemandId</td>
                                                                  @{
                                                                     var currentUserName =  UserManager.FindByIdAsync(item.UserId).Result.NameSurname;
                                                                  }
                                                                  <td>@currentUserName</td>
                                                                  
                                                                  @if(item.DemandTitle.Length >=30)
                                                                  {
                                                                      <td>@item.DemandTitle.Substring(0,30) ..</td>
                                                                  }
                                                                  else
                                                                  {
                                                                      <td>@item.DemandTitle</td>
                                                                  }
                                                                                                                                          
                                                                                                                                                                 
                                                                  <td> @Html.Raw(item.DemandContent.Substring(0,20)) ...</td>
                                                                  <td>
                                                                      @(((DateTime)item.DemandCreateTime).ToString("dd.MM.yyyy"))
                                                                                                                                                                 
                                                                  </td>
                                                                  @if (item.DemandStatus == true)
                                                                  {
                                                                      <td class="bg-success">
                                                                          Aktif
                                                                      </td>
                                                                                                                                                                          
                                                                  }else{
                                                                      <td class="bg-danger">
                                                                          Pasif
                                                                      </td>
                                                                  }
                                                                                                                                          
                                                                  <td>
                                                                      <a href="/Employee/DemandAnswerUser/@item.DemandId"><span class="badge bg-danger">Talep Yanıtla</span></a>
                                                                                                                                                                        
                                                                  </td>
                                                                                                                                                                 
                                                              </tr>
                                                          }
                                                          </tbody>
                                                      </table>
                                                  </div>
                                                                                                                                          
                                                                                                                                          
                                              
                                                  </div>
                                              </div>
    </div>
    
    

</div>


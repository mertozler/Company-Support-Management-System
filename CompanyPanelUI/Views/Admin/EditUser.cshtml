
@using CompanyPanelUI.Models.UserEditViewModel


@model UserEditViewModel

@{
    ViewData["Title"] = "EditUser";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div class="card card-primary">
              <div class="card-header">
                <h3 class="card-title">Kullanıcı Düzenle</h3>
              </div>

              <div class="card">
                  <div class="card-header">
                        <h3 class="card-title">Firma Seçin</h3>
                        </div>
                  <form id="make_checkbox_select" asp-action="EditUser" method="post" asp-controller="Admin">
                      <select name="FirmId" asp-for="FirmId">
                          @foreach (var item in Model.Firm)
                          {
                              <option value="@item.FirmId">@item.FirmName</option>

                          }
                      </select>
                      <input type="submit" />

                      <div class="card-header">
                          <h3 class="card-title">Rol Seçin</h3>
                      </div>
                          <select name="Role" asp-for="Role">
                              @foreach (var item in Model.Roles)
                              {
                                  <option value="@item.Name">@item.NormalizedName</option>

                              }
                          </select>
                          <input type="submit" />



                          <div class="card">
                              <div class="card-header">
                                  <h3 class="card-title">Kullanıcı Bilgisi</h3>
                              </div>

                              <div class="card-body">
                                  
                                      <input type="hidden" asp-for="UserId" name="UserId" id="UserId" value="@Model.User.Id" />

                                      <div class="form-group">
                                          <label for="exampleInputEmail1">Kullanıcı Adı Soyadı</label>
                                           <input type="text" asp-for="UserNameSurname" class="form-control" id="UserNameSurname"  name="UserNameSurname" value="@Model.User.NameSurname" placeholder="@Model.User.NameSurname">
                                      </div>
                                      <div class="form-group">
                                          <label for="exampleInputPassword1">Kullanıcı Mail</label>
                                          <input type="text" asp-for="UserMail" class="form-control" id="UserMail"  name="UserMail" value="@Model.User.Email" placeholder="@Model.User.Email">
                                      </div>
                                      <div class="form-group">
                                          <label for="exampleInputPassword1">Kullanıcı Telefonu</label>
                                          <input type="text" asp-for="UserPhone" class="form-control" id="UserPhone"  name="UserPhone" value="@Model.User.PhoneNumber" placeholder="@Model.User.PhoneNumber">
                                      </div>
                                      <div class="form-group">
                                          <label for="exampleInputPassword1">Kullanıcının Başvuru Yaptığı Şirket</label>
                                          <input type="text" asp-for="UserApplicationFirm" class="form-control" id="UserApplicationFirm"  name="UserApplicationFirm" value="@Model.User.ApplicationFirm" placeholder="@Model.User.ApplicationFirm">
                                      </div>

                                  
                              </div>
                              <!-- /.card-body -->

                              <div class="card-footer">
                                  <button type="submit" class="btn btn-primary">Kullanıcı Bilgilerini Güncelle</button>
                              </div>
                          </div>
                      </form>

</div>


</div>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.8.2/jquery.min.js"></script>

<style>

</style>


<script>

  $(function()
  {
    var mySelectCheckbox = new checkbox_select(
    {
      selector : "#make_checkbox_select",
            selected_translation : "selectat",
            all_translation : "Toate marcile",
            not_found : "Nici unul gasit",

      // Event during initialization
      onApply : function(e)
      {
                alert("Custom Event: " + e.selected);
      }
    });
  
  });
    
</script>
                            
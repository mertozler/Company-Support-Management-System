@using CompanyPanelUI.DTOS

@model UserRegisterModel


@{
    ViewData["Title"] = "UserRegister";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card card-primary">
              <div class="card-header">
                <h3 class="card-title">Kullanıcı Kaydı</h3>
              </div>

              <div class="card">
                  <div class="card-header">
                        <h3 class="card-title">Firma Seçin</h3>
                        </div>
                  <form id="make_checkbox_select" asp-action="UserRegister" method="post" asp-controller="Admin">
                      <select name="FirmId" asp-for="FirmId">
                          @foreach (var item in Model.Firm)
                          {
                              <option value="@item.FirmId">@item.FirmName</option>

                          }
                      </select>

                          <div class="card">
                              <div class="card-header">
                                  <h3 class="card-title">Kullanıcı Bilgisi</h3>
                              </div>

                              <div class="card-body">
                                  @foreach (var item in Model.User)
                                  {
                                      <input type="hidden" asp-for="UserId" name="UserId" value="@item.UserId" />

                                      <div class="form-group">
                                          <label for="exampleInputEmail1">Kullanıcı Adı Soyadı</label>
                                          <input type="text" class="form-control" id="UserNameSurname" name="FirmName" placeholder="@item.UserNameSurname">
                                      </div>
                                      <div class="form-group">
                                          <label for="exampleInputPassword1">Kullanıcı Mail</label>
                                          <input type="number" class="form-control" id="UserMail" name="UserMail" placeholder="@item.UserMail">
                                      </div>
                                      <div class="form-group">
                                          <label for="exampleInputEmail1">Kullanıcı Telefonu</label>
                                          <input type="text" class="form-control" asp-for="UserPhone" name="UserPhone" value="@Model.UserPhone" placeholder="@Model.UserPhone">
                                      </div>
                                      <div class="form-group">
                                          <label for="exampleInputPassword1">Kullanıcının Başvuru Yaptığı Şirket</label>
                                          <input type="number" class="form-control" id="FirmTelNo" name="FirmTelNo" placeholder="@item.UserApplicationFirm">
                                      </div>

                                  }
                              </div>
                              <!-- /.card-body -->

                              <div class="card-footer">
                                  <button type="submit" class="btn btn-primary">Kullanıcı Şirket Kaydı Yap</button>
                              </div>
                          </div>
                      </form>

</div>


</div>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.8.2/jquery.min.js"></script>

<style>

</style>


<script>

  $(function()
  {
    var mySelectCheckbox = new checkbox_select(
    {
      selector : "#make_checkbox_select",
            selected_translation : "selectat",
            all_translation : "Toate marcile",
            not_found : "Nici unul gasit",

      // Event during initialization
      onApply : function(e)
      {
                alert("Custom Event: " + e.selected);
      }
    });
  
  });
    
</script>
                            

      



